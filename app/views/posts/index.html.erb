<div class="space-y-6">
  <% if @posts.any? %>
    <div class="divide-y divide-gray-200">
      <% @posts.each do |post| %>
        <%= turbo_frame_tag dom_id(post) do %>
          <article class="bg-white shadow rounded-lg p-6 mb-6 hover:shadow-md transition-shadow">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
              <%= link_to post.title, post_path(post), class: "hover:text-gray-700" %>
            </h2>
            <div class="text-sm text-gray-600 mb-4">
              <%= post.published_at.strftime("%B %d, %Y") %>
            </div>
            <div class="text-gray-700 leading-relaxed">
              <% truncated_body = post.body.to_s.truncate(200, separator: " ") %>
              <%= simple_format(truncated_body) %>
            </div>
            <%= link_to "Read more â†’", post_path(post), class: "text-blue-600 hover:text-blue-800 font-medium mt-4 inline-block" %>
          </article>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <p class="text-gray-600 text-lg">No posts yet. Check back soon!</p>
    </div>
  <% end %>
</div>
